@model IEnumerable<APIAbooking.Models.Room>
@*@using ReflectionIT.Mvc.Paging
@addTagHelper *, ReflectionIT.Mvc.Paging*@
@*<a asp-action="PersonalInfo" asp-route-id="idClient">Personal info</a>*@

@foreach (var item in Model)
{
        @if(item.Reserved == false) { 
    <div class="card card-outline-primary m-1 p-1">
        <div class="bg-faded p-1">
            <h4>
                <a asp-action="DetalistOfRoom" asp-controller="Room" asp-route-id="@item.RoomId"> @item.NameOfRoom</a>
              <div >Location: @item.City, @item.Country</div>
                <span class="badge badge-pill badge-primary" style="float:right">
                    <small>@item.Price.ToString("c")</small>
                </span>
            </h4>
        </div>
        <div>
            @item.Describe
            <button type="submit" asp-action="Booking" asp-controller="Room" asp-route-id="@item.RoomId"
                    class="btn btn-success btn-sm pull-right" style="float:right">
                Add To Cart
            </button>
        </div>
    </div>
    }
}
