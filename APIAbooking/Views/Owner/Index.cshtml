
@model IEnumerable<APIAbooking.Models.Room>

<p class="text-warning">@ViewBag.Description</p>
<a class="btn btn-success" asp-action="Create" asp-controller="Room" asp-route-id="1">Create a new post</a>
<form method="get">
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Max Guest</th>
                <td>Number of bathroom</td>
                <th>County</th>
                <th>Street</th>
                <th>City</th>
                <th>Number of house</th>
                <th>Zip</th>
                <th>What space can use guests</th>
                <th>Special item</th>
                <th>Photo</th>
                <th>Discribe</th>
                <th>Phone number</th>
                <th>Checkin</th>
                <th>Checkout</th>
                <th>Price</th>
                <th>Reserverd</th>
                <th>Owner</th>
                <th> Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.MaxGuest</td>
                    <td>@item.NrBathroom</td>
                    <td>@item.Country</td>
                    <td>@item.Street</td>
                    <td>@item.City</td>
                    <td>@item.NoHouse</td>
                    <td>@item.Zip</td>
                    <td>@item.WhatSpaceCanUseGuests</td>
                    <td>@item.SpecialItem</td>
                    <td>@item.Photo</td>
                    <td>@item.Describe</td>
                    <td>@item.PhoneNumber</td>
                    <td>@item.Checkin</td>
                    <td>@item.Checkout</td>
                    <td><span class="badge badge-pill badge-primary">
    <small>@item.Price.ToString("c")</small>
</span></td>
                    <td>@item.Reserved</td>
                    <td>@ViewBag.currentUser</td>
                    <td>
                        <a asp-action="Edit" asp-controller="Room" asp-route-id="@item.RoomId" class="btn btn-outline-success">Edit</a>
                        @if (item.Reserved == true)
                        {
                            <p class="text-danger">You can't delete this room</p>
                        }
                        else
                        {
                    <a asp-action="Delete" asp-controller="Room" asp-route-id="@item.RoomId" class="btn btn-outline-danger">Delete</a>
                        }
                        
                    </td>
                </tr>
            }
        </tbody>
    </table>
</form>

